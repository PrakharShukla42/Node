<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        h1 {
            text-align: center;
            margin-bottom: 20px;
        }
        button {
            background-color: #007BFF;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }
        .container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }
        .box {
            border: 1px solid #ccc;
            padding: 15px;
            width: 200px;
            border-radius: 5px;
            box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.1);
        }
        .box h2 {
            margin: 0;
            font-size: 1.2rem;
            color: #333;
        }
        .box p {
            margin: 5px 0;
            font-size: 0.9rem;
            color: #666;
        }
        .box a, .box form {
            margin-top: 10px;
            display: inline-block;
        }
        .box a {
            text-decoration: none;
            color: #007BFF;
            font-size: 0.9rem;
        }
        .box form button {
            background-color: #FF4D4D;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 5px;
            font-size: 0.8rem;
            cursor: pointer;
        }
        .box form button:hover {
            background-color: #FF1A1A;
        }
    </style>
</head>
<body>
    <h1>USER DETAILS</h1>
    <div class="container">
        <% for(let user of Users){ %>
            <div class="box">
                <h2><%= user.name %></h2>
                <p>Email: <%= user.email %></p>
                <p>Password: <%= user.password %></p>
                <p>City: <%= user.city %></p>
                <a href="/user/edit/<%= user.id %>">Edit</a>
                <form action="/user/<%= user.id %>?_method=DELETE" method="POST" style="display:inline;">
                    <button type="submit">Delete</button>
                </form>
            </div>
        <% } %>
    </div>
</body>
</html>
