<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <style>
        #img{
            height: 200px;
        }
        .container{
            flex-wrap: wrap;
        }
    </style>
</head>
<body>
    <a href="/posts/new" class="btn btn-primary m-3">Create New Post</a>
    <div class="container d-flex justify-content-evenly">
        <% for (let post of posts) { %>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title"><%= post.title %></h5>
                  <p class="card-text"><%= post.content.substring(0, 100) %>...</p>
                  <p><strong>Tag:</strong> <%= post.tag %></p>
                  <a href="/posts/<%= post._id %>" class="btn btn-success">Show</a>
                  <a href="/posts/<%= post._id %>/edit" class="btn btn-primary">Edit</a>
                  <form action="/posts/<%= post._id %>?_method=delete" method="post" class="d-inline">
                    <button class="btn btn-danger">Delete</button>
                  </form>
                </div>
            </div>
        <% } %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>